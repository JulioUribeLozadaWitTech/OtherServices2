@model IEnumerable<OtherServices2.Models2.VigenciaCupo>

@{

}

<div class="d-flex justify-content-between">
    <h1 class="pt-5 ps-2 mt-0 mb-5 border-start border-1">Vigencia Cupos</h1>
    <p>
        <a class="btn btn-primario mt-5" asp-action="Create">+ Agregar</a>
    </p>
</div>
<table class="cell-border table table-striped table-hover" id="example">
    <thead class="table-dark">
        <tr>
            <td>
                ID
            </td>
            <th>
                Documento
            </th>
            <th>
                Fecha Desde
            </th>
            <th>
                Fecha Hasta
            </th>
            <th>
                Jornada
            </th>
            <th>
                Tipo Vehiculo
            </th>
            <th>
                Placa
            </th>
            <th>
                Area
            </th>
            <th>
                N° Parqueadero
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdVigencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DocIdentTerceroNavigation.DocIdentTercero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaDesde)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaHasta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Jornada)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoVehiculo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Placa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCupoNavigation.Area)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCupoNavigation.NoCupoArea)
                </td>
                <td>
                    <a title="Eliminar" asp-action="Eliminar" onclick="return confirm('¿Desea eliminar este registro?')" asp-controller="VigenciaCupoes" asp-route-id="@item.IdVigencia"><img src="~/images/ico-accion-eliminar.png" /></a>
            </tr>
        }
    </tbody>
</table>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {

        $('#example').DataTable({
            'pageLength': 6,
            language: {
                "url": "https://cdn.datatables.net/plug-ins/1.13.1/i18n/es-ES.json"
            }
        });
    });
</script>

