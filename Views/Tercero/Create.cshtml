@model OtherServices2.Models.Tercero

@{
    ViewData["Title"] = "Create";
}

@if (ViewData["MensajeError"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["MensajeError"]
    </div>
}

<h4 class="pt-5 ps-2 mt-0 mb-5 border-start border-1">Agregar Tercero</h4>
<hr />
<div class="container">
    <div>
        <form class="row" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-4 me-5 w-20 mb-4">
                    <label class="control-label mb-2">Registrado</label>
                    <select name="XX" class="form-control bg-grisa" aria-label="Default select example">
                        <option selected>-</option>
                        <option value="si">Si</option>
                        <option value="no">No</option>
                    </select>
                </div>
            </div>
            <br />
            <div class="col-3 me-5 w-20 mb-4">
                <label asp-for="TipoIdentTercero" class="control-label mb-2">Tipo de Documento</label>
                <select asp-for="TipoIdentTercero" class="form-control bg-grisa" asp-items="ViewBag.TipoIdentTercero"></select>
            </div>
            <div class="col-3 me-5 w-20 mb-4">
                <label asp-for="DocIdentTercero" class="control-label mb-2">No. Documento</label>
                <input type="text" maxlength="17" asp-for="DocIdentTercero" class="form-control bg-grisa" />
                <span asp-validation-for="DocIdentTercero" class="text-danger"></span>
            </div>
            <div class="col-3 me-5 w-20 mb-4">
                <label asp-for="Genero" class="control-label mb-2">Género</label>
                <select name="Genero" class="form-control bg-grisa" aria-label="Default select example">
                    <option selected>Femenino</option>
                    <option value="Masculino">Masculino</option>
                </select>
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>
            <div class="col-2 me-5 w-20 mb-4">
                <label asp-for="PrimerNombre" class="control-label mb-2">Primer Nombre</label>
                <input type="text" maxlength="20" asp-for="PrimerNombre" class="form-control bg-grisa" />
                <span asp-validation-for="PrimerNombre" class="text-danger"></span>
            </div>
            <div class="col-2 me-5 w-20 mb-4">
                <label asp-for="SegundoNombre" class="control-label mb-2">Segundo Nombre</label>
                <input type="text" maxlength="20" asp-for="SegundoNombre" class="form-control bg-grisa" />
                <span asp-validation-for="SegundoNombre" class="text-danger"></span>
            </div>
            <div class="col-2 me-5 w-20 mb-4">
                <label asp-for="PrimerApellido" class="control-label mb-2">Primer Apellido</label>
                <input type="text" maxlength="20" asp-for="PrimerApellido" class="form-control bg-grisa" />
                <span asp-validation-for="PrimerApellido" class="text-danger"></span>
            </div>
            <div class="col-2 me-5 w-20 mb-4">
                <label asp-for="SegundoApellido" class="control-label mb-2">Segundo Apellido</label>
                <input type="text" maxlength="20" asp-for="SegundoApellido" class="form-control bg-grisa" />
                <span asp-validation-for="SegundoApellido" class="text-danger"></span>
            </div>
            <div class="col-3 me-5 w-20 mb-4">
                <label asp-for="CorreoPersonal" class="control-label mb-2">Correo electrónico</label>
                <input type="text" maxlength="50" asp-for="CorreoPersonal" class="form-control bg-grisa" />
                <span asp-validation-for="CorreoPersonal" class="text-danger"></span>
            </div>
            <div class="col-3 me-5 w-20 mb-4">
                <label asp-for="TelefonoDomicilio" class="control-label mb-2">Teléfono</label>
                <input type="text" maxlength="30" asp-for="TelefonoDomicilio" class="form-control bg-grisa" />
                <span asp-validation-for="TelefonoDomicilio" class="text-danger"></span>
            </div>
            <div class="col-3 me-5 w-20 mb-4">
                <label asp-for="TelefonoAlterno" class="control-label mb-2">Teléfono Alterno</label>
                <input asp-for="TelefonoAlterno" class="form-control bg-grisa" />
                <span asp-validation-for="TelefonoAlterno" class="text-danger"></span>
            </div>
            <div class="col-3 me-5 w-20 mb-4">
                <label asp-for="DireccionDomicilio" class="control-label mb-2">Dirección</label>
                <input type="text" maxlength="15" asp-for="DireccionDomicilio" class="form-control bg-grisa" />
                <span asp-validation-for="DireccionDomicilio" class="text-danger"></span>
            </div>
            <div class="col-3 me-5 w-20 mb-4">
                <label asp-for="BarrioDomicilio" class="control-label mb-2">Barrio</label>
                <input type="text" maxlength="100" asp-for="BarrioDomicilio" class="form-control bg-grisa" />
                <span asp-validation-for="BarrioDomicilio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primario mt-5">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="me-2 border-end-2 bi bi-plus-lg" viewBox="0 0 16 16">
                        <path class="p-3" fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z" />
                    </svg>GUARDAR
                </button>
            </div>
        </form>
        <br />
        <a class="regresar" asp-action="Index"> &#60;&#60; Regresar </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
