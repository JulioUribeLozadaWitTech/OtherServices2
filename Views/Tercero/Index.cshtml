@model IEnumerable<OtherServices2.Models.Tercero>

@{

}

@if (ViewData["MensajeError"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["MensajeError"]
    </div>
}

<div class="d-flex justify-content-between">
    <h1 class="pt-5 ps-2 mt-0 mb-5 border-start border-1">Terceros</h1>
    <p>
        <a class="btn btn-primario mt-5" asp-action="Create">+ Agregar</a>
    </p>
</div>
<main>
    <table class="table table-striped table-hover" id="example">
        <thead class="table-dark">
            <tr>
                <th>
                    Tipo de Documento
                </th>
                <th>
                    Documento
                </th>
                <th>
                    Primer Nombre
                </th>
                <th>
                    Segundo Nombre
                </th>
                <th>
                    Primer Apellido
                </th>
                <th>
                    Segundo Apellido
                </th>
                <th>
                    Fecha de Registro
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoIdentTerceroNavigation.TipoIdentTercero1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DocIdentTercero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrimerNombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SegundoNombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrimerApellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SegundoApellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaRegistro)
                    </td>
                    <td>
                        <a title="Ver detalle" asp-action="Details" asp-route-id="@item.DocIdentTercero"><img src="~/images/ico-accion-ver.png" /></a> |
                        <a title="Eliminar" asp-action="Eliminar" onclick="return confirm('¿Desea eliminar este registro?')" asp-controller="Tercero" asp-route-id="@item.DocIdentTercero"><img src="~/images/ico-accion-eliminar.png" /></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</main>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {

        $('#example').DataTable({
            'pageLength': 6,
            language: {
                "url": "https://cdn.datatables.net/plug-ins/1.13.1/i18n/es-ES.json"
            }
        });
    });
</script>





