@model OtherServices2.Models.Servicio

@{
    ViewData["Title"] = "Create";
    SelectList TipoServiciolist = (SelectList)ViewData["TipoServiciolist"];
    SelectList GrupoServiciolist = (SelectList)ViewData["GrupoServiciolist"];
}

<h4 class="pt-5 ps-2 mt-0 mb-5 border-start border-1">Agregar Servicio</h4>
<hr />
<div class="container">
    <div>
        <form class="row" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-4 me-5 w-20 mb-4">
                <label asp-for="Codigo" class="control-label mb-2">Código</label>
                <input type="text" maxlength="20" asp-for="Codigo" class="form-control bg-grisa" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="col-4 me-5 w-20 mb-4">
                <label asp-for="IdGrupo" class="control-label mb-2">ID del Grupo</label>
                <select asp-for="IdGrupo" class="form-control bg-grisa" asp-items="ViewBag.IdGrupo"></select>
            </div>
            <div class="col-4 me-5 w-20 mb-4">
                <label asp-for="IdTipoServicio" class="control-label mb-2">ID Tipo del Servicio</label>
                <select asp-for="IdTipoServicio" class="form-control bg-grisa" asp-items="ViewBag.IdTipoServicio"></select>
            </div>
            <div class="col-4 me-5 w-20 mb-4">
                <label asp-for="Descripcion" class="control-label mb-2">Descripción</label>
                <input type="text" maxlength="100" asp-for="Descripcion" class="form-control bg-grisa" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="col-4 me-5 w-20 mb-4">
                <label asp-for="Valor" class="control-label mb-2">Valor </label>
                <input type="number" asp-for="Valor" class="form-control bg-grisa" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primario mt-5">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="me-2 border-end-2 bi bi-plus-lg" viewBox="0 0 16 16">
                        <path class="p-3" fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z" />
                    </svg>GUARDAR
                </button>
            </div>
        </form>
        <br />
        <a class="regresar" asp-action="Index"> &#60;&#60; Regresar </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }