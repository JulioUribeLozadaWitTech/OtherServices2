            <div class="form-group">
                <label asp-for="TelefonoDomicilio" class="control-label">Telefono</label>
                <input asp-for="TelefonoDomicilio" class="form-control" />
                <span asp-validation-for="TelefonoDomicilio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vinculacion" class="control-label"></label>
                <input asp-for="Vinculacion" class="form-control" />
                <span asp-validation-for="Vinculacion" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a class="btn btn-warning me-3" asp-action="">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
