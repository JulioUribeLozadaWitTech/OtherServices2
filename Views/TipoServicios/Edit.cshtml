@model OtherServices2.Models.TipoServicio

@{
    ViewData["Title"] = "Edit";
}

<h4 class="pt-5 ps-2 mt-0 mb-5 border-start border-1">Editar Tipo de Servicio</h4>

<hr />
<div class="container">

    <div>
        <form class="row" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdTipoServicio" />
            <div class="col-3 me-5 w-20">
                <label asp-for="TipoServicio1" class="control-label mb-2">Tipo de Servicio</label>
                <input asp-for="TipoServicio1" class="form-control bg-grisa" />
                <span asp-validation-for="TipoServicio1" class="text-danger"></span>
            </div>
            <div class="col-3 me-5 w-20">
                <label asp-for="FechaRegistro" class="control-label mb-2"></label>
                <input asp-for="FechaRegistro" class="form-control bg-grisa" />
                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <button type="submit" class="btn btn-primario mt-5">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="me-2 border-end-2 bi bi-plus-lg" viewBox="0 0 16 16">
                        <path class="p-3" fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z" />
                    </svg>GUARDAR
                </button>
            </div>
        </form>
        <br />
        <a class="regresar" asp-action=""> &#60;&#60; Regresar </a>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
