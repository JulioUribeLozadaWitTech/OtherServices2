@model IEnumerable<OtherServices2.Models3.Grado>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between">
    <h1 class="pt-5 ps-2 mt-0 mb-5 border-start border-1">Grado</h1>
    <p>
        <a class="btn btn-primario mt-5" asp-action="Create">+ Agregar</a>
    </p>
</div>
<table class="cell-border table table-striped table-hover" id="example">
    <thead class="table-dark">
        <tr>
            <th>
                Fuerza Militar
            </th>
            <th>
                Tipo Planta
            </th>
            <th>
                Grado
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FuerzaMilitar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoPlanta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grado1)
                </td>
                <td>
                    <a title="Editar" asp-action="Edit" asp-route-id="@item.IdGrado"><img src="~/images/ico-accion-editar.png" /></a>
                    <a title="Eliminar" asp-action="Eliminar" onclick="return confirm('¿Desea eliminar este registro?')" asp-controller="Gradoes" asp-route-id="@item.IdGrado"><img src="~/images/ico-accion-eliminar.png" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {

        $('#example').DataTable({
            'pageLength': 4,
            language: {
                "url": "https://cdn.datatables.net/plug-ins/1.13.1/i18n/es-ES.json"
            }
        });
    });
</script>