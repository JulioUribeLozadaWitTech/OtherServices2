@model IEnumerable<OtherServices2.Models2.ServicePortal>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between">
    <h1 class="pt-5 ps-2 mt-0 mb-5 border-start border-1">Portal Paciente</h1>
    <p>
        <a class="btn btn-primario mt-5" asp-action="Create">+ Agregar</a>
    </p>
</div>
<table class="cell-border table table-striped table-hover" id="example">
    <thead class="table-dark">
        <tr>
            <th>
                Nombre del Servicio
            </th>
            <th>
                Descripción del servicio
            </th>
            <th>
                Tipo Procedimiento
            </th>
            <th>
                Tipo Proce. Thumb
            </th>
            <th>
                Tipo Costo Thumb
            </th>
            <th>
                Hora Minuto
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeProcedure)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeProcedureThumb)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeCostThumb)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeMinute)
                </td>
                <td>
                    <a title="Editar" asp-action="Edit" asp-route-id="@item.IdServicePortal"><img src="~/images/ico-accion-editar.png" /></a> |
                    <a title="Eliminar" asp-action="Eliminar" onclick="return confirm('¿Desea eliminar este registro?')" asp-controller="ServicePortals" asp-route-id="@item.IdServicePortal"><img src="~/images/ico-accion-eliminar.png" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {

        $('#example').DataTable({
            'pageLength': 6,
            language: {
                "url": "https://cdn.datatables.net/plug-ins/1.13.1/i18n/es-ES.json"
            }
        });
    });
</script>
